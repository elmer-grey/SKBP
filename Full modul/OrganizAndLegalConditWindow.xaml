                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="LightGray"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Height="30"
                                                                        Width="120"
                                                                        CornerRadius="15"
