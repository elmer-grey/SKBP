Content="Сохранить"
Foreground="White"
FontSize="16"
FontWeight="Medium"
VerticalAlignment="Center" 
FontFamily="Ubuntu"
Name="Save0"
                                                Click="ExportButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="LightGray"/>
                                                    <Setter Property="Cursor" Value="Arrow"/>
