            <Grid Grid.Row="5" Background="LightGray">
                <Border 
Background="Transparent" 
BorderBrush="Gray" 
BorderThickness="1"
Width="560" 
Height="50"
            HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Ellipse x:Name="ConnectionIndicator" 
                     Width="12" 
                     Height="12" 
                     Fill="Gray" 
                     VerticalAlignment="Center"
                     ToolTip="Статус подключения к БД">
                        <Ellipse.Resources>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ConnectionIndicator, Path=Fill}" Value="Red">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                        Duration="0:0:0.3">
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="DarkRed"/>
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.2" Value="Red"/>
                                                    </ColorAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding ElementName=ConnectionIndicator, Path=Fill}" Value="Green">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                        Duration="0:0:0.3">
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="LimeGreen"/>
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.2" Value="Green"/>
                                                    </ColorAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Resources>
                    </Ellipse>

                    <TextBlock x:Name="ConnectionStatusText" 
                       Text="" 
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="12"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
