<local:BaseWindow x:Class="Full_modul.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Full_modul" 
        mc:Ignorable="d"
        Height="510" Width="550"
        Title="Окно для расчётов"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        WindowStyle="None" Background="White"
        BorderThickness="1" BorderBrush="Black">

    <local:BaseWindow.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkRed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MinimizeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B2B2B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxStyleChoise" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid Width="510" Height="35">
                            <Border Name="Border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </Border.Style>

                                <ToggleButton Name="ToggleButton"
                                      Focusable="False"
                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                                      Background="Transparent"
                                      BorderThickness="0"  
                                      BorderBrush="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1"/>
                                            <ColumnDefinition Width="450"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="1" 
                                                  Content="{TemplateBinding SelectionBoxItem}" 
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                  Margin="3,2,0,0"/>
                                        <Path x:Name="Arrow" 
                                      Data="M 0 0 L 10 0 L 5 10 Z" 
                                      Fill="Black" 
                                      HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5" 
                                      Grid.Column="2" Width="10">
                                        </Path>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup Name="Popup" Placement="Bottom" AllowsTransparency="True" Focusable="False" 
                           IsOpen="{TemplateBinding IsDropDownOpen}" 
                           PopupAnimation="Slide">
                                <Border BorderThickness="1" BorderBrush="#888888" CornerRadius="5" 
                                Background="White" Width="510">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Arrow" Property="Data" Value="M 5 0 L 10 10 L 0 10 Z"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#200A0A0A"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Ubuntu"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <DataTemplate x:Key="DateTemplate">
            <TextBlock Text="{Binding StringFormat='{}{0:dd.MM.yyyy}'}" 
                       FontSize="14" 
                       Foreground="Black" 
                       FontFamily="Arial"/>
        </DataTemplate>

        <Style x:Key="ComboBoxStyleCalendar" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid Width="200" Height="30">
                            <Border Name="Border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15" >
                                <ToggleButton Name="ToggleButton"
                                      Focusable="False"
                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ComboBox}}}"
                                      Background="Transparent"
                                      BorderThickness="0"  
                                      BorderBrush="Transparent">
                                    <Grid>
                                        <ContentPresenter Content="{TemplateBinding SelectedItem}" 
                                                  ContentTemplate="{StaticResource DateTemplate}"                                                  
                                                  VerticalAlignment="Center" 
                                                  HorizontalAlignment="Center"
                                                          />
                                        <Path x:Name="Arrow" 
                                      Data="M 0 0 L 10 0 L 5 10 Z" 
                                      Fill="Black" 
                                      HorizontalAlignment="Right" 
                                      VerticalAlignment="Center" 
                                      Margin="170,2,0,0" 
                                      RenderTransformOrigin="0.5,0.5">
                                        </Path>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup Name="Popup" Placement="Bottom" AllowsTransparency="True" Focusable="False" 
                           IsOpen="{TemplateBinding IsDropDownOpen}" 
                           PopupAnimation="Slide" HorizontalAlignment="Center">
                                <Border BorderThickness="1" BorderBrush="#888888" CornerRadius="10" 
                                Background="White" Width="200" Height="160" HorizontalAlignment="Center">
                                    <Calendar x:Name="calendar" 
                                              Tag="{Binding RelativeSource={RelativeSource AncestorType=ComboBox}, Path=Tag}"
                                      SelectedDatesChanged="Calendar_SelectedDateChanged"                                              
                                              Loaded="CalendarComboBox_Loaded"
                                      MouseDown="Calendar_MouseDown"
                                      Background="White"
                                      FontWeight="Heavy"
                                      BorderThickness="0"
                                      Width="200"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Arrow" Property="Data" Value="M 5 0 L 10 10 L 0 10 Z"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#200A0A0A"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Ubuntu"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </local:BaseWindow.Resources>

    <Grid>
        <Border Background="Black" Height="32"
                MouseLeftButtonDown="Border_MouseLeftButtonDown" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/HR.ico"
                       Width="35"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       MouseRightButtonDown="Image_MouseRightButtonDown" 
                       Margin="8,0,0,0">
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Свернуть" Click="MinimizeButton_Click"/>
                            <MenuItem Header="Закрыть" Click="CloseButton_Click"/>
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>

                <TextBlock Text="Калькулятор" Grid.Column="1" Foreground="White" 
           VerticalAlignment="Center" HorizontalAlignment="Center"
           Margin="17,0,0,0" FontSize="16" FontFamily="Ubuntu" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MinimizeButtonStyle}" Click="MinimizeButton_Click">
                        <TextBlock Text="－"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click">
                        <TextBlock Text="X"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="0,32,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="2.7*"/>
            </Grid.RowDefinitions>

            <Grid Margin="3,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="user"
                           Foreground="Black"
                           FontFamily="Ubuntu"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontWeight="Normal"
                           Margin="10"
                           FontSize="15"
                           TextWrapping="Wrap"
                           MaxWidth="300"/>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="46" Width="46">
                    <Grid>
                        <Ellipse Width="45" Height="45" Fill="DarkGray"/>
                        <Image Width="38" Height="38"
                               Source="/Images/Image.png"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Button Click="Button_User_Click"  BorderThickness="0">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Images/User.png" Width="40" Height="40" />
                            <TextBlock Text="Личный кабинет" VerticalAlignment="Center" FontFamily="Ubuntu" FontWeight="Normal" />
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{x:Null}">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
Value="True">
                                        <Setter Property="Background"
Value="#EBEBEB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <Button Click="Button_Reports_Click"  BorderThickness="0">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Images/Reports.png" Width="40" Height="40" />
                            <TextBlock Text="Отчёты" VerticalAlignment="Center" FontFamily="Ubuntu" FontWeight="Normal" />
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{x:Null}">
                                <Setter Property="TextElement.FontFamily"
 Value="Fonts/#Dosis"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
Value="True">
                                        <Setter Property="Background"
Value="#EBEBEB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid VerticalAlignment="Center" HorizontalAlignment="Left" Height="36" Width="425" Margin="1" Grid.Column="0">
                    <Border Width="450"
                            Height="35"
                            Background="#7dc5ea"
                            Margin="-25,0,0,0"
                            CornerRadius="20"/>
                    <TextBlock Text="Анализ кадрового состава"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="40,0,0,0"
                               FontFamily="Ubuntu"
                               FontWeight="Medium"
                               FontSize="25"/>
                </Grid>

                <Button Click="Button_Help_Click" BorderThickness="0" Grid.Column="1" VerticalAlignment="Top" Margin="0,4,16,0" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/Images/help.png" Width="35"/>
                    </StackPanel>
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock Text="Справка" FontFamily="Ubuntu" FontWeight="Light" FontSize="14"/>
                        </ToolTip>
                    </Button.ToolTip>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{x:Null}">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EAEAEA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <Grid Grid.Row="2" Height="auto" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <Grid>
                        <ComboBox x:Name="comboBoxFormules" 
                                  SelectionChanged="comboBoxFormules_SelectionChanged"                                  
                                  Style="{StaticResource ComboBoxStyleChoise}"
                                  IsTabStop="False" 
                                  IsTextSearchEnabled="False"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  FontSize="16"
                                  Margin="15"                                  >

                            <ComboBoxItem Content="Коэффициент оборота по приему" FontSize="15" Padding="10,0,0,0"/>
                            <ComboBoxItem Content="Коэффициент оборота по выбытию" FontSize="15" Padding="10,0,0,0"/>
                            <ComboBoxItem Content="Коэффициент текучести кадров" FontSize="15" Padding="10,0,0,0"/>
                            <ComboBoxItem Content="Коэффициент постоянства состава персонала предприятия" FontSize="15" Padding="10,0,0,0"/>
                        </ComboBox>
                        <TextBlock x:Name="TextBlock_ShowName" 
                            FontFamily="Ubuntu" 
                            FontSize="17"
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Left"                                        
                            Foreground="#C00A0A0A" 
                            Background="Transparent"
                            Padding="30,0,0,0"
                            Visibility="Visible"
                            Text="Выберите формулу"
                            IsHitTestVisible="False"
                            Height="auto"/>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20">
                <CheckBox Content="Единый период подсчёта для всех коэффициентов" 
                          FontSize="15" 
                          FontFamily="Ubuntu" 
                          x:Name="CheckBox_Date" 
                          Checked="CheckBox_Date_Checked" 
                          Unchecked="CheckBox_Date_Unchecked" 
                          FontWeight="Light" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Visibility="Collapsed">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <StackPanel Orientation="Horizontal">
                                            <Border x:Name="CheckBoxBorder"
                        Background="Transparent" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Width="20" 
                        Height="20">
                                                <Path x:Name="CheckMark" 
                          Data="M 2 8 L 8 14 L 17 1" 
                          Stroke="Black" 
                          StrokeThickness="2" 
                          Visibility="Collapsed" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{TemplateBinding Content}" 
                           TextWrapping="Wrap" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           MaxWidth="400" 
                           Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#3636EB"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="Gray"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>
            </StackPanel>

            <StackPanel Grid.Row="4" x:Name="GroupContainer" Width="480" HorizontalAlignment="Center">
                <StackPanel x:Name="koefgroup0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal"  Width="auto" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                            <Grid Width="480">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Начало периода подсчёта"
                           Foreground="Black"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontFamily="Ubuntu"
                           FontSize="15"/>
                                <Grid Grid.Column="1" HorizontalAlignment="Right">
                                    <ComboBox x:Name="dateComboBoxAgo0"
                                              Style="{StaticResource ComboBoxStyleCalendar}"
                                              HorizontalAlignment="Center"
                                              IsEditable="True" 
                                              IsTextSearchEnabled="False"
                                              Tag="dateTextBoxAgo0"
                                              MouseDown="ComboBox_MouseDown" 
                                              FontFamily="Ubuntu">
                                    </ComboBox>

                                    <TextBox x:Name="dateTextBoxAgo0"
                                             IsReadOnly="True"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             IsHitTestVisible="False"
                                             FontSize="16"
                                             Foreground="Black"
                                             HorizontalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal"  Width="auto" HorizontalAlignment="Stretch" Margin="0,15,0,0">
                            <Grid Width="480">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Конец периода подсчёта"
                                           Foreground="Black"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontFamily="Ubuntu"
                                           FontWeight="Normal"
                                           FontSize="15"/>
                                <Grid Grid.Column="1" HorizontalAlignment="Right">
                                    <ComboBox x:Name="dateComboBoxLater0"
                                              Style="{StaticResource ComboBoxStyleCalendar}"
                                              HorizontalAlignment="Center"
                                              IsEditable="True" 
                                              IsTextSearchEnabled="False"
                                              Tag="dateTextBoxLater0"
                                              MouseDown="ComboBox_MouseDown" 
                                              FontFamily="Ubuntu">
                                    </ComboBox>
                                    <TextBox x:Name="dateTextBoxLater0"
                                             IsReadOnly="True"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             IsHitTestVisible="False"
                                             FontSize="16"
                                             Foreground="Black"
                                             HorizontalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                        <!--<StackPanel Grid.Row="2" Orientation="Horizontal"  Width="auto" HorizontalAlignment="Stretch" Margin="0,15,0,0">
                            <Grid Width="480">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Рассматриваемая должность"
                                           Foreground="Black"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontFamily="Ubuntu"
                                           FontWeight="Normal"
                                           FontSize="15"/>
                                <Grid Grid.Column="1" HorizontalAlignment="Right">
                                    <ComboBox x:Name="levelworker0"
                                              Width="200"
                                              Style="{StaticResource ComboBoxStyleLevelWorker}"
                                              HorizontalAlignment="Center"
                                              IsEditable="False"                                               
                                              FontFamily="Ubuntu"                  
                                              IsTextSearchEnabled="False"
                                              MouseDown="ComboBox_MouseDown"
                                              SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Начальник отдела" />
                                        <ComboBoxItem Content="Менеджер" />
                                        <ComboBoxItem Content="Бухгалтер" />
                                    </ComboBox>
                                </Grid>
                            </Grid>
                        </StackPanel>-->
                        <StackPanel Grid.Row="3" Orientation="Horizontal"  Width="auto" HorizontalAlignment="Stretch" Margin="0,15,0,0">
                            <Grid Width="480" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32*"/>
                                    <ColumnDefinition Width="18*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Кол−во принятого на работу персонала"
                                           Foreground="Black"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontFamily="Ubuntu"
                                           FontWeight="Normal"
                                           FontSize="15"/>
                                <Grid Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBox x:Name="count0"
                                             IsReadOnly="True"
                                             Background="#200A0A0A"
                                             BorderThickness="0"
                                             IsHitTestVisible="False"
                                             FontSize="16"
                                             Height="30"                                             
                                             Width="160"
                                             Foreground="Black"
                                             HorizontalAlignment="Center" 
                                             FontFamily="Ubuntu"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal"  Width="auto" HorizontalAlignment="Stretch" Margin="0,15,0,0">
                            <Grid Width="480">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32*"/>
                                    <ColumnDefinition Width="18*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Среднесписочная численность работников"
                                           Foreground="Black"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontFamily="Ubuntu"
                                           FontWeight="Normal"
                                           FontSize="15"/>
                                <Grid Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBox x:Name="SCHR0"
                                             IsReadOnly="True"
                                             Background="#200A0A0A"
                                             BorderThickness="0"
                                             IsHitTestVisible="False"
                                             FontSize="16"
                                             Height="30"                                           
                                             Width="160"
                                             Foreground="Black"
                                             HorizontalAlignment="Center" 
                                             FontFamily="Ubuntu"/>
                                </Grid>
                            </Grid>
                        </StackPanel>
