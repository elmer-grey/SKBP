<Window x:Class="Full_modul.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Full_modul"
        mc:Ignorable="d"
        Height="350" Width="350"
        ResizeMode="NoResize"
        Icon="Images\HR1.ico"
        Title="Окно авторизации"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        WindowStyle="None" Background="White"
        BorderThickness="1" BorderBrush="Black">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkRed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MinimizeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B2B2B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Popup x:Name="ConnectionCheckPopup" StaysOpen="False" Placement="Center" AllowsTransparency="True">
            <Border Background="#AA000000" CornerRadius="10" Padding="10">
                <TextBlock Text="Подождите, идет проверка подключения..." Foreground="White" />
            </Border>
        </Popup>
        <Border Background="Black" Height="32"
                MouseLeftButtonDown="Border_MouseLeftButtonDown" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="Images/HR.ico" Width="35" VerticalAlignment="Center" HorizontalAlignment="Center"
       MouseRightButtonDown="Image_MouseRightButtonDown" Margin="8,0,0,0">
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Свернуть" Click="MinimizeButton_Click"/>
                            <MenuItem Header="Закрыть" Click="CloseButton_Click"/>
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>

                <TextBlock Text="Окно авторизации" Grid.Column="1" Foreground="White" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="17,0,0,0" FontFamily="Ubuntu" FontSize="14" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MinimizeButtonStyle}" Click="MinimizeButton_Click">
                        <TextBlock Text="－"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click">
                        <TextBlock Text="X"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="0,32,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="180*"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                    <Grid>
                        <Image Height="75" Width="Auto"
                               Source="/Images/Logo.png"/>
                    </Grid>
                </StackPanel>
                
                <Button Click="Button_Help_Click" BorderThickness="0" Grid.Column="2" VerticalAlignment="Top" Margin="0,4,4,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Images/help.png" Width="25"/>
                    </StackPanel>
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock Text="Справка" FontFamily="Ubuntu" FontWeight="Light" FontSize="14"/>
                        </ToolTip>
                    </Button.ToolTip>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{x:Null}">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EAEAEA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Width="Auto">
                <TextBox x:Name="TextBox_Login" 
                         Width="300" 
                         Height="35" 
                         Margin="0,0,0,7"
                         FontFamily="Ubuntu" 
                         FontSize="15"
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Center" 
                         Foreground="Black" 
                         Background="#E2E2E2" 
                         BorderThickness="0"
                         Padding="5,10"
                         IsReadOnly="True" 
                         GotFocus="TextBox_Login_GotFocus"
                         LostFocus="TextBox_Login_LostFocus"
                         KeyDown="TextBox_KeyDown"
                         Text="Введите логин" FontWeight="Light">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="15">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Width="300" Margin="0,5,0,0">
                    <Grid x:Name="PasswordContainer" >
                        <PasswordBox x:Name="PasswordBox" 
                                     Width="263" 
                                     Height="35" 
                                     Margin="0,0,5,0"
                                     FontSize="14"
                                     Padding="5,9"
                                     VerticalAlignment="Center" 
                                     Background="#E2E2E2" 
                                     BorderThickness="0"
                                     FontFamily="Ubuntu" 
                                     FontWeight="Light"
                                     KeyDown="TextBox_KeyDown"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border Background="{TemplateBinding Background}" 
            BorderBrush="{TemplateBinding BorderBrush}" 
            BorderThickness="{TemplateBinding BorderThickness}" 
            CornerRadius="15">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <TextBlock x:Name="TextBlock_ShowName" 
                                    Margin="2,0,0,0"
                                    FontFamily="Ubuntu" 
                                    FontSize="15"
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left"                                        
                                    Foreground="Black" 
                                    Background="Transparent"
                                    Padding="5,9"
                                    Visibility="Visible"
                                    Text="Введите пароль"
                                    IsHitTestVisible="False"
                                    Height="32" 
                                    Width="150" FontWeight="Light"/>

                        <TextBox x:Name="TextBox_ShowPassword" 
                                 Width="238" 
                                 Height="35" 
                                 Margin="0,0,5,0"
                                 FontSize="15"
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Left"
                                 Background="#E2E2E2" 
                                 BorderThickness="0"
                                 Padding="5,9"                                 
                                 FontFamily="Ubuntu" 
                                 FontWeight="Light"
                                 Visibility="Collapsed"
                                 KeyDown="TextBox_KeyDown"
                                 TextChanged="TextBox_ShowPassword_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
BorderBrush="{TemplateBinding BorderBrush}" 
BorderThickness="{TemplateBinding BorderThickness}" 
CornerRadius="15">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>

                    <Button x:Name="ShowPasswordButton" 
                        Content="👁" 
                        Width="32" 
                        Height="34"  
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                        Background="Transparent" 
                        BorderThickness="0"
                        Click="ShowPasswordButton_Click"/>
                </StackPanel>
            </StackPanel>
            
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <CheckBox Content="Сохранить данные" Margin="12,0,0,0" FontSize="15" FontFamily="Ubuntu" 
                              x:Name="CheckBox_SaveData" Checked="CheckBox_SaveData_Checked" 
                              Unchecked="CheckBox_SaveData_Unchecked" FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center">                        
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <StackPanel Orientation="Horizontal">
                                            <Border x:Name="CheckBoxBorder"
                                                    Background="Transparent" 
                                                    BorderBrush="Gray" 
                                                    BorderThickness="1" 
                                                    CornerRadius="5" 
                                                    Width="20" 
                                                    Height="20">
                                                <Path x:Name="CheckMark" 
                                                      Data="M 2 8 L 8 14 L 17 1" 
                                                      Stroke="Black" 
                                                      StrokeThickness="2" 
                                                      Visibility="Collapsed" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="{TemplateBinding Content}" 
                                                       TextWrapping="Wrap" 
                                                       HorizontalAlignment="Left" 
                                                       VerticalAlignment="Center"
                                                       MaxWidth="300" 
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#3636EB"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="Gray"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CheckBox.Style>
                    </CheckBox>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Click="Button_Click" Background="White" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Забыли пароль?" FontWeight="Light" FontFamily="Ubuntu" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{x:Null}">
                                <Setter Property="TextElement.FontFamily"
 Value="Fonts/#Dosis"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
Value="True">
                                        <Setter Property="Background"
Value="#EBEBEB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="3"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Click="Button_Login_Click"
                        Content="Вход"
                        Foreground="White"
                        FontSize="23"
                        FontWeight="Bold">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily"
     Value="Fonts/#Dosis"/>
                            <Setter Property="Background" Value="#7dc5ea"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
    Value="True">
                                    <Setter Property="Background"
    Value="#9ed2ed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="160" Height="38"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Grid Grid.Row="4" Background="LightGray">
                <Border 
        Background="Transparent" 
        BorderBrush="Gray" 
        BorderThickness="1"
        Width="360" 
        Height="50"
                    HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Ellipse x:Name="ConnectionIndicator" 
                             Width="12" 
                             Height="12" 
                             Fill="Gray" 
                             VerticalAlignment="Center"
                             ToolTip="Статус подключения к БД">
                        <Ellipse.Resources>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ConnectionIndicator, Path=Fill}" Value="Red">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                                Duration="0:0:0.3">
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="DarkRed"/>
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.2" Value="Red"/>
                                                    </ColorAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding ElementName=ConnectionIndicator, Path=Fill}" Value="Green">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                                Duration="0:0:0.3">
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="LimeGreen"/>
                                                        <DiscreteColorKeyFrame KeyTime="0:0:0.2" Value="Green"/>
                                                    </ColorAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Resources>
                    </Ellipse>

                    <TextBlock x:Name="ConnectionStatusText" 
                               Text="" 
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>